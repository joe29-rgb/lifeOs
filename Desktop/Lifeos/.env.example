# ============================================
# TIMELINE APP - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development  # development | staging | production

# ============================================
# FIREBASE AUTHENTICATION
# ============================================
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin SDK (Backend only)
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=your_service_account@your_project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ============================================
# MONGODB DATABASE
# ============================================
# Development
MONGODB_URI_DEV=mongodb+srv://username:password@cluster.mongodb.net/timeline-dev?retryWrites=true&w=majority

# Staging
MONGODB_URI_STAGING=mongodb+srv://username:password@cluster.mongodb.net/timeline-staging?retryWrites=true&w=majority

# Production
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/timeline-prod?retryWrites=true&w=majority

# ============================================
# BACKEND API
# ============================================
# Backend server URL (change based on environment)
API_BASE_URL_DEV=http://localhost:3000/api
API_BASE_URL_STAGING=https://timeline-staging.azurewebsites.net/api
API_BASE_URL_PROD=https://timeline-api.azurewebsites.net/api

# Backend server port
PORT=3000

# JWT Secret for token generation
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# ============================================
# OPENAI API
# ============================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORG_ID=org-your_organization_id  # Optional

# Model configuration
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_WHISPER_MODEL=whisper-1

# Cost limits (USD per user per month)
OPENAI_FREE_TIER_LIMIT=5.00
OPENAI_PRO_TIER_LIMIT=50.00

# ============================================
# AZURE FUNCTIONS (Batch Processing)
# ============================================
AZURE_FUNCTIONS_URL=https://your-function-app.azurewebsites.net
AZURE_FUNCTIONS_KEY=your_function_app_master_key

# ============================================
# REDIS (For job queues and caching)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password  # Optional for local dev

# Azure Redis Cache (Production)
REDIS_URL_PROD=rediss://:password@your-cache.redis.cache.windows.net:6380

# ============================================
# ENCRYPTION
# ============================================
# AES-256 encryption key (must be 32 bytes/64 hex characters)
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here_change_this

# ============================================
# PUSH NOTIFICATIONS
# ============================================
EXPO_PUSH_TOKEN=your_expo_push_token_here

# ============================================
# LINKEDIN API (Optional - for Relationships Pillar)
# ============================================
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=https://your-app.com/auth/linkedin/callback

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info  # error | warn | info | debug
LOG_FILE_PATH=./logs/timeline.log

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_ALWAYS_ON_RECORDING=false
FEATURE_LINKEDIN_INTEGRATION=false
FEATURE_LIFE_SIMULATION=true
FEATURE_OFFLINE_MODE=true

# ============================================
# DATA RETENTION (days)
# ============================================
DATA_RETENTION_FREE_TIER=30
DATA_RETENTION_PRO_TIER=365
